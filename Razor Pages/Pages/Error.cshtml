@page
@model ErrorModel
@{
    ViewData["Title"] = Model.ErrorTitle;
}

<div class="container d-flex flex-column justify-content-center align-items-center" style="min-height: 60vh;">
    
    <div class="card shadow-lg border-0 text-center p-5" style="max-width: 600px; border-radius: 15px;">
        
        <div class="mb-4">
            <i class="bi @Model.Icon text-danger" style="font-size: 5rem;"></i>
        </div>

        <h1 class="display-6 fw-bold text-dark mb-3">@Model.ErrorTitle</h1>

        <p class="lead text-muted mb-4">
            @Model.ErrorMessage
        </p>

        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            <a asp-page="/Index" class="btn btn-primary btn-lg px-4 gap-3">
                <i class="bi bi-house-door-fill"></i> Volver al Inicio
            </a>
            
            <button onclick="history.back()" class="btn btn-outline-secondary btn-lg px-4">
                Volver Atrás
            </button>
        </div>

        @if (Model.ShowRequestId)
        {
            <div class="mt-5 pt-3 border-top">
                <p class="small text-muted mb-1">
                    <i class="bi bi-bug"></i> Información técnica para soporte:
                </p>
                <code class="text-danger bg-light p-1 rounded">ID: @Model.RequestId</code>
            </div>
        }
    </div>

</div>