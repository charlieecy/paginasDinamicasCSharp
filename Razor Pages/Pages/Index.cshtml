@page
@model IndexModel
@{
    ViewData["Title"] = "Catálogo de Funkos";
}

<div class="container">
    <h1 class="display-6 mb-4">Catálogo de Funkos</h1>

    <!-- Últimos 3 Funkos visitados -->
    @if (Model.VistosRecientemente.Any())
    {
        <div class="card mb-4 bg-light shadow-sm">
            <div class="card-body">
                <h5 class="card-title text-muted mb-3"><i class="bi bi-clock-history"></i> Vistos recientemente</h5>
                <div class="row g-3">
                    @foreach (var funko in Model.VistosRecientemente)
                    {
                        <div class="col-md-4">
                            <div class="d-flex align-items-center bg-white border rounded p-2">
                                <img src="@funko.Imagen" class="rounded-circle me-3" style="width: 50px; height: 50px; object-fit: cover;" onerror="this.src='/uploads/default.png'" />
                                <div>
                                    <h6 class="mb-0 text-truncate" style="max-width: 150px;">@funko.Nombre</h6>
                                    <span class="badge bg-secondary">@funko.Categoria</span>
                                </div>
                                <a asp-page="./Funkos/Details" asp-route-id="@funko.Id" class="btn btn-sm btn-outline-primary ms-auto">
                                    Ver
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }


    <!-- Mensajes flash -->
    <div class="container mt-3">
        @if (TempData["Creado"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle"></i> @TempData["Creado"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        
        @if (TempData["Actualizado"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show">
                <i class="fas fa-exclamation-triangle"></i> @TempData["Actualizado"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        
        @if (TempData["Eliminado"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-triangle"></i> @TempData["Eliminado"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        
    </div>
    <div class="row mb-3 align-items-center">
        <div class="col-md-6">
            <form method="get">
                <div class="input-group">
                    <input type="text" asp-for="Nombre" class="form-control" placeholder="Buscar por nombre...">
                    <button class="btn btn-primary" type="submit">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                    @if (!string.IsNullOrEmpty(Model.Nombre))
                    {
                        <a asp-page="./Index" class="btn btn-outline-secondary">Limpiar</a>
                    }
                </div>
            </form>
        </div>
        <div class="col-md-6 text-end">
            <a asp-page="./Funkos/Create" class="btn btn-success">
                <i class="bi bi-plus-lg"></i> Nuevo Funko
            </a>
        </div>
    </div>

    <table class="table table-hover align-middle">
        <thead class="table-dark">
        <tr>
            <th>Imagen</th>
            <th>Nombre</th>
            <th>Categoría</th>
            <th>Precio</th>
            <th class="text-center">Acciones</th>
        </tr>
        </thead>
        <tbody>
        @if (Model.Funkos.Any())
        {
            @foreach (var item in Model.Funkos)
            {
                <tr>
                    <td>
                        <img src="@item.Imagen" 
                             alt="@item.Nombre" 
                             class="rounded-circle shadow-sm"
                             style="width: 50px; height: 50px; object-fit: cover;" 
                             onerror="this.src='/uploads/default.png'" />
                    </td>
                    <td>@item.Nombre</td>
                    <td><span class="badge bg-secondary">@item.Categoria</span></td>
                    <td class="fw-bold">@item.Precio.ToString("C")</td>
                        
                    <!--Mediante asp-route-id se crea la URL /Funkos/Details/5
                    Ese id es capturado por el archivo Details.cshtml mediante el page "{id:long}"
                    , quien se lo envía a Details.cshtml.cs, que lo recoge como parámetro en la función-->
                    <td class="text-center">
                        <a asp-page="./Funkos/Details" asp-route-id="@item.Id" 
                           class="btn btn-info btn-sm text-white me-1" title="Detalles">
                            <i class="bi bi-eye-fill"></i>
                        </a>

                        <a asp-page="./Funkos/Update" asp-route-id="@item.Id" 
                           class="btn btn-warning btn-sm text-white me-1" title="Editar">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                            
                        <!-- El sistema busca en el archivo Index.cshtml.cs un método que coincida con esta fórmula 
                        matemática: On + Verbo HTTP (POST) + Handler (Delete) + Async (Opcional) 
                        y coincide con nuestro método OnPostDeleteAsync(id)-->
                        <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" 
                              style="display:inline-block;" 
                              onsubmit="return confirm('¿Seguro que quieres borrar a @item.Nombre?');">
                            <button type="submit" class="btn btn-danger btn-sm" title="Borrar">
                                <i class="bi bi-trash-fill"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted p-4">
                    <em>No encontramos Funkos con ese nombre.</em>
                </td>
            </tr>
        }
        </tbody>
    </table>
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Navegación de páginas">
            <ul class="pagination justify-content-center">
                
                <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                    <a class="page-link" 
                       asp-page="./Index" 
                       asp-route-PageNumber="@(Model.PageNumber - 1)"
                       asp-route-Nombre="@Model.Nombre">
                        &laquo; Anterior
                    </a>
                </li>

                <li class="page-item disabled">
                    <span class="page-link">
                        Página @Model.PageNumber de @Model.TotalPages
                    </span>
                </li>

                <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" 
                       asp-page="./Index" 
                       asp-route-PageNumber="@(Model.PageNumber + 1)"
                       asp-route-Nombre="@Model.Nombre">
                        Siguiente &raquo;
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>
