@page
@model Razor_Pages.Pages.Login
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light py-5">
    <div class="card shadow-lg border-0" style="max-width: 420px; width: 100%;">
        <div class="card-body p-4">

            <!-- Header -->
            <div class="text-center mb-4">
                <div class="mx-auto mb-3 d-flex align-items-center justify-content-center rounded-circle bg-primary text-white"
                     style="width: 72px; height: 72px;">
                    <i class="bi bi-person-circle fs-1"></i>
                </div>
                <h1 class="h4 fw-bold">Bienvenido</h1>
                <p class="text-muted small mb-0">Gestiona tu colección de Funkos</p>
            </div>

            <!-- Alerts -->
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger py-2 small">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    @Model.ErrorMessage
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success py-2 small">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    @TempData["SuccessMessage"]
                </div>
            }

            <!-- Form -->
            <form method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label fw-semibold">Email</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-envelope"></i>
                        </span>
                        <input asp-for="Input.Email"
                               type="email"
                               class="form-control"
                               placeholder="admin@admin.com"
                               required />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <label asp-for="Input.Password" class="form-label fw-semibold">Contraseña</label>
                        <a href="#" class="small text-decoration-none">¿Olvidaste tu clave?</a>
                    </div>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-lock"></i>
                        </span>
                        <input asp-for="Input.Password"
                               type="password"
                               class="form-control"
                               placeholder="••••••••"
                               required />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" />
                    <label asp-for="Input.RememberMe" class="form-check-label small">
                        Mantener sesión iniciada
                    </label>
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-primary">
                        Entrar
                        <i class="bi bi-arrow-right ms-1"></i>
                    </button>
                </div>
            </form>

            <div class="text-center text-muted small my-3">— o —</div>

            <div class="d-grid mb-3">
                <a asp-page="/Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-house me-1"></i> Volver a la tienda
                </a>
            </div>

            <!-- Demo -->
            <div class="border rounded p-3 bg-light">
                <h6 class="text-uppercase text-muted small fw-bold mb-2">
                    <i class="bi bi-shield-lock me-1"></i> Modo Demo
                </h6>
                <div class="small d-flex justify-content-between">
                    <span class="text-muted">User:</span>
                    <span class="fw-semibold">admin@admin.com</span>
                </div>
                <div class="small d-flex justify-content-between">
                    <span class="text-muted">Pass:</span>
                    <span class="fw-semibold">Admin123</span>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}