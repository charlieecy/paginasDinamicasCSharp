@model Blazor.Models.FunkoDetailsViewModel
<!-- 
    model: Define el tipo de modelo que esta vista espera
    Esto proporciona IntelliSense y tipo seguro en la vista
-->

@{
    ViewData["Title"] = "Detalle del Funko";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <!-- Con model podemos usar Model.Propiedad directamente -->
                    <h3 class="mb-0">@Model.Nombre</h3>
                    <span class="badge bg-primary fs-6">@Model.Categoria</span>
                </div>
                
                <div class="card-body">
                    <div class="row g-0 align-items-center">
                        <div class="col-md-5 text-center mb-3 mb-md-0">
                            <img src="@Model.Imagen" 
                                 alt="@Model.Nombre" 
                                 class="img-fluid rounded border border-2" 
                                 style="max-height: 350px; object-fit: cover;"
                                 onerror="this.src='/uploads/default.png'"/>
                        </div>

                        <div class="col-md-7 ps-md-4">
                            <h5 class="text-muted mb-3">Información del Producto</h5>
                            <dl class="row">
                                <dt class="col-sm-4">ID:</dt>
                                <dd class="col-sm-8">@Model.Id</dd>

                                <dt class="col-sm-4">Precio:</dt>
                                <dd class="col-sm-8 text-success fw-bold fs-4">
                                    @Model.Precio.ToString("C")
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-light text-end">
                    <a asp-action="Index" class="btn btn-secondary me-2">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning text-white">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>